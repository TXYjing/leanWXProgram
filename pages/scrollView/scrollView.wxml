<!--pages/scrollView/scrollView.wxml-->
<!-- scrollview局部滚动 -->
<!-- 1.水平滚动 scroll-x-->
<scroll-view class="container" scroll-x>
  <view wx:for="{{10}}" wx:key="{{index}}" class="item">{{item}}</view>
</scroll-view>
<!-- 2.垂直滚动 scroll-y-->
<scroll-view class="container1" scroll-y>
  <view wx:for="{{10}}" wx:key="{{index}}" class="item1">{{item}}</view>
</scroll-view>
<!-- 3.其他补充-->
<scroll-view 
class="container1"
 scroll-y 
 bindscroll="handlescroll"
 >
  <view wx:for="{{10}}" wx:key="{{index}}" class="item1">{{item}}</view>
</scroll-view>