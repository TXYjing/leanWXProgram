<!--pages/view/view.wxml-->
<!-- 1.view的使用， 块级元素 -->
<view>哈哈哈</view>
<view>呵呵呵</view>
<!-- 2.属性：hover-class -->
<view class="box1" hover-class="box1-hover">box1</view>
<!-- 3.hover-stop-propagation：阻止冒泡点击态 -->
<view hover-class="box2-hover" class="box2">
  <view class="box1" hover-class="box1-hover" hover-stop-propagation="{{true}}">box1</view>
</view>
<view hover-class="box2-hover" class="box2">
  <view class="box1" hover-class="box1-hover" hover-stop-propagation="{{false}}">box1</view>
</view>